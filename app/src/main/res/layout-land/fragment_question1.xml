<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/questionOne"
        android:text="@string/question_one"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/pantsImage"
        android:src="@drawable/pants"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionOne"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <ImageView
        android:id="@+id/questionOneNextArrow"
        android:background="@drawable/next_arrow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toRightOf="@id/radioGroup"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.961"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/question1_landscape_wrong1"
        android:src="@drawable/no_mom_no"
        app:layout_constraintTop_toBottomOf="@+id/questionOne"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/question1_landscape_wrong2"
        android:src="@drawable/no_mom_no"
        app:layout_constraintTop_toBottomOf="@+id/questionOne"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="invisible"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pantsImage">

        <RadioButton
            android:id="@+id/radio_black"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="@string/pants_black"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radio_white"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="@string/pants_white"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radio_no_pants"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="@string/no_pants"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RadioGroup>


</android.support.constraint.ConstraintLayout>



